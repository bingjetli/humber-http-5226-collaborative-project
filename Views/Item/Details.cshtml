@model humber_http_5226_collaborative_project.Models.ItemDto

@{
    ViewBag.Title = "Item Details";
    //Layout = "~/Views/Shared/_Layout.cshtml"; (add layout file??)
}

<h2>@ViewBag.Title</h2>

<div class="details-panel">
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>

        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>

        <dt>Price</dt>
        <dd>$@Html.DisplayFor(model => model.Price)</dd>
    </dl>

    <div class="buttons">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ItemId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Delete", "DeleteConfirm", new { id = Model.ItemId }, new { @class = "btn btn-danger" })
    </div>
</div>



