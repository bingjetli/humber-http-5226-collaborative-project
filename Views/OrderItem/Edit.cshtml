@model humber_http_5226_collaborative_project.Models.viewmodel.DetailsOrderItem

@{
    ViewBag.Title = "Edit Order Item";
    //Layout = "~/Views/Shared/_Layout.cshtml"; (add layout file??)
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Update", "OrderItem", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.SelectedOrderItem.OrderItemId)

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrderItem.ItemId, "Item", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedOrderItem.ItemId, (SelectList)ViewBag.ItemId, "Select Item", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedOrderItem.ItemId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrderItem.Quantity, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedOrderItem.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number", min = "1" } })
            @Html.ValidationMessageFor(model => model.SelectedOrderItem.Quantity, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrderItem.OrderId, "Order", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedOrderItem.OrderId, (SelectList)ViewBag.OrderId, "Select Order", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedOrderItem.OrderId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update Order Item" class="btn btn-default" />
        </div>
    </div>
}


