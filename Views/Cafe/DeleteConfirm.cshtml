@model humber_http_5226_collaborative_project.Models.CafeDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this cafe?</h2>

<!--Cafe information-->
<h2>@Model.Name</h2>
<div>Address: @Model.Address</div>

<!--Button to delete cafe-->
<form action="/Cafe/Delete/@Model.CafeId" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>

<!--Return back to list of cafes-->
<a href="/Cafe/List">Cancel</a>

