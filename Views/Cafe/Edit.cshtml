@model humber_http_5226_collaborative_project.Models.ViewModels.UpdateCafe

@{
    ViewBag.Title = "Edit";
}

<h2>Update Cafe</h2>
<form action="/Cafe/Update/@Model.selectedcafe.CafeId" method="POST">
    <div>
        <input type="text" name="CafeId" value="@Model.selectedcafe.CafeId" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="Name" value="@Model.selectedcafe.CafeName" />
    </div>
    <div>
        <label>Address:</label> <input type="text" name="Address" value="@Model.selectedcafe.CafeAddress" />
    </div>
    <div>
        <label>OverpassId:</label> <input type="text" name="OverpassId" value="@Model.selectedcafe.CafeOverpassId" />
    </div>
    <div>
        <label>Latitude:</label> <input type="text" name="Latitude" value="@Model.selectedcafe.CafeLatitude" />
    </div>
    <div>
        <label>Longitude:</label> <input type="text" name="Longitude" value="@Model.selectedcafe.CafeLongitude" />
    </div>
    <div>
        <label>Phone:</label> <input type="text" name="Phone" value="@Model.selectedcafe.CafePhone" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="Description" value="@Model.selectedcafe.CafeDescription" />
    </div>
    <div>
        <label>Website:</label> <input type="text" name="Website" value="@Model.selectedcafe.CafeWebsite" />
    </div>
    <div>
        <label>Image:</label> <input type="file" name="Image" value="@Model.selectedcafe.CafeImage" />
    </div>
    <div>
        <input type="submit" value="Update Cafe" />
    </div>

</form>
