@model humber_http_5226_collaborative_project.Models.viewmodel.DetailsOrder

@{
    ViewBag.Title = "Edit Order";
    //Layout = "~/Views/Shared/_Layout.cshtml"; (add layout file??)
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Update", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.HiddenFor(model => model.SelectedOrder.OrderId)

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrder.CafeId, "Cafe", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedOrder.CafeId, (SelectList)ViewBag.CafeId, "Select Cafe", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedOrder.CafeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrder.CourierLicenseId, "Courier License", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedOrder.CourierLicenseId, (SelectList)ViewBag.CourierLicenseId, "Select License", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedOrder.CourierLicenseId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrder.Status, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedOrder.Status, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelectedOrder.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedOrder.CreatedAt, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedOrder.CreatedAt, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.SelectedOrder.CreatedAt, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>
}

