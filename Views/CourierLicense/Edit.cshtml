@model humber_http_5226_collaborative_project.Models.viewmodel.DetailsCourierLicense

@{
    ViewBag.Title = "Edit Courier License";
    //Layout = "~/Views/Shared/_Layout.cshtml"; (add layout file??)
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Update", "CourierLicense", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.SelectedCourierLicense.CourierLicenseId) 

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCourierLicense.VehicleType, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedCourierLicense.VehicleType, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SelectedCourierLicense.VehicleType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCourierLicense.IsValid, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.SelectedCourierLicense.IsValid, new { @class = "checkbox" })
            @Html.ValidationMessageFor(model => model.SelectedCourierLicense.IsValid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCourierLicense.IsAvailable, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.SelectedCourierLicense.IsAvailable, new { @class = "checkbox" })
            @Html.ValidationMessageFor(model => model.SelectedCourierLicense.IsAvailable, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedCourierLicense.IssueDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SelectedCourierLicense.IssueDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.SelectedCourierLicense.IssueDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}



